rule use-net-snmp
{
  if $(NETSNMP_USES_OPENSSL) = yes {
    use-openssl $(1) ;
  }
  use-product $(1) $(2) $(3) $(4) $(5) $(6) $(7) $(8) $(9)
    : $(NETSNMP_ROOT)$(jam.SEPARATOR)lib
    : $(NETSNMP_LIBS)
    : $(project.NETSNMP_SYSLIBS)
    : $(NETSNMP_ROOT)$(jam.SEPARATOR)include$(jam.SEPARATOR)net-snmp
  ;
}

