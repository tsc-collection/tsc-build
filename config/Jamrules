}

rule use-oracle
{
  use-product $(1) $(2) $(3) $(4) $(5) $(6) $(7) $(8) $(9)
    : $(project.ORACLE_LIBDIR:E=$(project.ORACLE_HOME)$(jam.SEPARATOR)lib)
    : $(project.ORACLE_LIBS)
    :
    : $(project.ORACLE_HOME)$(jam.SEPARATOR)$(project.ORACLE_INCLUDES)
    : $(project.ORACLE_DEFINES)
    : $(project.ORACLE_JAR)
  ;
}

