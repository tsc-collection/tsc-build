rule use-boost
{
  use-product $(1) 
    : $(CONTRIB_ROOT)$(jam.SEPARATOR)boost-$(BOOST_VERSION)$(jam.SEPARATOR)lib
    : boost_$(2)_$(BOOST_VERSION)
    :
    : $(CONTRIB_ROOT)$(jam.SEPARATOR)boost-$(BOOST_VERSION)$(jam.SEPARATOR)include$(jam.SEPARATOR)boost-$(BOOST_VERSION)
    : $(BOOST_DEFINES)
    :
  ;
}

