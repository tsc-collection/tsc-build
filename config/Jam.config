CC_TARGET_NAME_FLAG ?= -o ;
CC_COMPILE_ONLY_FLAG ?= -c ;
CC_INCLUDE_FLAG ?= -I ;
CC_DEFINE_FLAG ?= -D ;

LINKER_TARGET_NAME_FLAG ?= $(CC_TARGET_NAME_FLAG) ;
LINKER_LIB_FLAG ?= -l ;
LINKER_LIBDIR_FLAG ?= -L ;
AR_TARGET_NAME_FLAG ?= "" ;

CXX_TARGET_NAME_FLAG ?= $(CC_TARGET_NAME_FLAG) ;
